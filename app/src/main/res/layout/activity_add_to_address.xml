<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/del_pic"
            android:top="28dp" />

        <TextView
            android:id="@+id/title_tv"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/ADDADDRESS"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/save_out_btn"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/DELETE"
            android:textSize="16dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_FFd7d7d7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="28dp"
                android:paddingLeft="24dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:text="@string/NAME1"
                    android:textColor="@color/color_484848"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/sex_rg"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/hospital_button"
                        style="@style/package_radio_style"
                        android:layout_marginRight="20dp"
                        android:text="@string/MS"
                        android:textSize="16dp"
                        android:textColor="@color/color_484848"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/merchants_button"
                        style="@style/package_radio_style"
                        android:text="@string/MR"
                        android:checked="true"
                        android:layout_marginRight="24dp"
                        android:textSize="16dp"
                        android:textColor="@color/color_484848"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <com.yum.two_yum.utile.ContainsEmojiEditText
                    android:id="@+id/name_ed"
                    android:layout_weight="1"
                    android:textSize="24dp"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:maxLength="225"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_484848"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/edit_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_FFd7d7d7"/>
            <TextView
                android:textSize="16dp"
                android:text="@string/PHONE"
                android:paddingLeft="24dp"
                android:paddingBottom="7dp"
                android:textColor="@color/color_484848"
                android:gravity="bottom"
                android:layout_height="64dp"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <com.yum.two_yum.utile.ContainsEmojiEditText
                    android:id="@+id/phone_ed"
                    android:textSize="24dp"
                    android:maxLength="225"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_484848"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                android:src="@mipmap/edit_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_FFd7d7d7"/>
            <TextView
                android:textSize="16dp"
                android:text="@string/DELIVERYADDRESS"
                android:paddingLeft="24dp"
                android:paddingBottom="7dp"
                android:textColor="@color/color_484848"
                android:gravity="bottom"
                android:layout_height="64dp"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:id="@+id/select_address_btn"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <TextView
                    android:id="@+id/address_ed"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_484848"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/right_arrow_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_FFd7d7d7"/>
            <TextView
                android:id="@+id/ps_tv"
                android:textSize="16dp"
                android:text="@string/PSOPTIONAL"
                android:paddingLeft="24dp"
                android:paddingBottom="7dp"
                android:textColor="@color/color_484848"
                android:gravity="bottom"
                android:layout_height="64dp"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <com.yum.two_yum.utile.ContainsEmojiEditText
                    android:id="@+id/ps_ed"
                    android:textSize="18dp"
                    android:maxLength="225"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:textColorHint="@color/color_FFC7C7CC"
                    android:hint="@string/EGAPTSUITECOMPANYNAME"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_484848"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/edit_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" /> />
            </LinearLayout>
            <View
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="90dp"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_FFd7d7d7"/>

        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="58dp">
            <TextView
                android:id="@+id/save_btn"
                android:textColor="@color/white"
                android:text="@string/SAVE"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/button_red"
                android:layout_width="118dp"
                android:layout_height="58dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>