<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ebebeb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:id="@+id/null_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_below="@+id/null_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/del_pic"
            android:top="28dp" />
        <TextView
            android:id="@+id/title_tv"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:textSize="15dp" />

    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_ebebeb"/>
    <com.yum.two_yum.utile.pulltorefresh.PullToRefreshListView
        android:id="@+id/content_lv"
        android:layout_below="@+id/line"
        android:dividerHeight="0px"
        android:divider="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <View
            android:visibility="gone"
            android:id="@+id/no_data_layout2"
            android:layout_weight="1"
            android:background="#6e000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/phone_layout"
            android:visibility="gone"
            android:layout_weight="1.2"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_tv"
                android:textColor="@color/color_484848"
                android:textSize="15dp"
                android:background="@color/color_f4f4f4"
                android:gravity="center"
                android:text="2y@2yum.app"
                android:layout_width="match_parent"
                android:layout_height="31dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/call_phone_btn"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:textColor="@color/color_007AFF"
                    android:text="@string/CALLPHONE"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/dialog_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/sms_phone_btn"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:textColor="@color/color_007AFF"
                    android:text="@string/MESSAGE"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/dialog_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/cancel_btn1"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:text="@string/CANCEL"
                    android:textStyle="bold"
                    android:textColor="@color/color_007AFF"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:id="@+id/no_data_layout1"
            android:layout_weight="1"
            android:background="#6e000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/cancel_layout"
            android:visibility="gone"
            android:layout_weight="1.2"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_484848"
            android:textSize="15dp"
            android:background="@color/color_f4f4f4"
            android:gravity="center"
            android:text="@string/PLEASESELECTAREASONFORCANCELLING"
            android:layout_width="match_parent"
            android:layout_height="31dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sold_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/SOLDOUT"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/wrong_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/WRONGORDER"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/customer_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/CUSTOMERREQUESTCANCELLATION"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/address_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/WRONGADDRESS"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/cannot_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/CANNOTCONTACT"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/cancel_cancel_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:text="@string/CANCEL"
                android:textStyle="bold"
                android:textColor="@color/color_007AFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>