<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView

            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/left_arrow"
            android:top="28dp" />
        <TextView
            android:id="@+id/save_out_btn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/SAVELOGOUT"
            android:textSize="16dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/title_layout"
        android:orientation="vertical"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="18dp"
            android:textSize="30dp"
            android:visibility="visible"
            android:text="@string/MANAGER"
            android:textStyle="bold"
            android:textColor="@color/color_484848"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:text="@string/NAME1"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/sex_rg"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/woman_button"
                    style="@style/package_radio_style"
                    android:layout_weight="1"
                    android:text="女士"
                    android:textSize="16dp"
                    android:textColor="@color/color_484848"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/man_button"
                    style="@style/package_radio_style"
                    android:layout_weight="1"
                    android:text="先生"
                    android:checked="true"
                    android:textSize="16dp"
                    android:textColor="@color/color_484848"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:id="@+id/name_ed"
                android:textSize="24dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/edit_point"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ebebeb"/>
        <TextView
            android:layout_marginTop="28dp"
            android:textSize="16dp"
            android:text="@string/PHONE"
            android:textColor="@color/color_484848"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:id="@+id/phone_ed"
                android:textSize="24dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/edit_point"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ebebeb"/>
        <TextView
            android:layout_marginTop="28dp"
            android:textSize="16dp"
            android:text="@string/EMAIL"
            android:textColor="@color/color_484848"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:id="@+id/email_ed"
                android:textSize="24dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/edit_point"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ebebeb"/>
    </LinearLayout>
    <TextView
        android:id="@+id/save_btn"
        android:background="@drawable/button_red"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/NEXT"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="118dp"
        android:layout_height="58dp" />

</RelativeLayout>