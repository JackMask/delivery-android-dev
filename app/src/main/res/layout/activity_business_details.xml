<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <com.yum.two_yum.utile.pulltorefresh.PullToRefreshListView
        android:id="@+id/listview"
        android:layout_marginBottom="57dp"
        android:layout_width="match_parent"
        android:dividerHeight="0px"
        android:divider="@color/white"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/cart_bg"
        android:visibility="gone"
        android:background="@color/translucent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/cart_layout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="264dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/color_f4f4f4"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:paddingRight="16dp"
            android:layout_height="31dp">
            <ImageView
                android:id="@+id/clear_cart"
                android:src="@mipmap/clear"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <ListView
            android:scrollbars="none"
            android:divider="@color/color_D7D7D7"
            android:dividerHeight="0.5dp"
            android:id="@+id/cart_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/navigation_lv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="71dp">
        <RelativeLayout
            android:background="@color/color_4F4F4F"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="57dp">
            <TextView
                android:id="@+id/delivery_one_tv"
                android:textSize="14dp"
                android:text="@string/DELIVERYCOST"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_bababa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/min_one_tv"
                android:textSize="16dp"
                android:text="@string/MIN"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:textColor="@color/color_bababa"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/select_dishes_layout"
                android:gravity="center_vertical|right"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="57dp">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/all_pice"
                    android:textSize="16sp"
                    android:layout_marginLeft="77dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:background="@color/color_4F4F4F"
                    android:layout_height="wrap_content" />
                <!--android:text="@string/DELIVERYCOST"-->
                <TextView
                    android:id="@+id/delivery_two_tv"
                    android:textSize="14sp"
                    android:text="@string/DELIVERYCOST"
                    android:background="@color/color_4F4F4F"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/color_bababa"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="118dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/min_two_tv"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:text="@string/MIN"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_bababa"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/continue_btn"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:text="@string/CONTINUE"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@color/color_FFFF3B30"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shopping_cart_layout"
            android:layout_marginLeft="12dp"
            android:layout_width="53dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/shopping_cart_btn"
                android:src="@mipmap/shopping_cart_round_gray"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="51dp"
                android:layout_height="51dp" />
            <TextView
                android:id="@+id/number_dian"
                android:layout_width="18dp"
                android:visibility="gone"
                android:layout_height="18dp"
                android:background="@drawable/bg_red_dian"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>