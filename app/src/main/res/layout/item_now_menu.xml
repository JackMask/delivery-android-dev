<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/sorting_layout"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_item"
        >
    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="37dp"
        android:id="@+id/item_layout"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="194dp">
        <ImageView
            android:id="@+id/dishes_img"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_width="156dp"
            android:layout_height="121dp" />
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/menu_name_tv"
                android:textSize="17dp"
                android:singleLine="true"
                android:text="fdsjalk"
                android:ellipsize="end"
            android:textStyle="bold"
                android:layout_marginBottom="7dp"
                android:textColor="@color/color_FF484848"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/content_tv"
                android:lines="4"
                android:text="fdsajfkslafjda;l"
                android:ellipsize="end"
                android:textSize="13dp"
                android:layout_marginBottom="7dp"
            android:textColor="@color/color_FF484848"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pice_tv"
                    android:textSize="18dp"
                    android:text="$ /"
                    android:textColor="@color/color_FF484848"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/num_tv"
                        android:textSize="12dp"
                        android:textColor="@color/color_ff3b30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/select_layout"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/select_btn"
                        android:src="@mipmap/select_not"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/del_btn"
            android:background="@color/color_FFFF3B30"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="@string/DELETE"
            android:layout_width="82dp"
            android:layout_height="match_parent" />
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/color_ebebeb"
        />
    <TextView
        android:id="@+id/prompt_tv"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_marginBottom="86dp"
        android:textColor="@color/color_9f9f9f"
        android:text="@string/CLICKCIRCLECHOOSEDISHES"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>