<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/back_img"
            android:top="28dp" />

        <TextView
            android:id="@+id/create_account_btn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/color_FFDBDBDB"
            android:text="@string/SUBMIT"
            android:textSize="16dp" />
    </RelativeLayout>

<TextView
    android:layout_marginTop="45dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/color_FF484848"
    android:textSize="16dp"
    android:layout_marginRight="40dp"
    android:text="@string/ENTERYOUREMAILADDRESSANDWELLSENDYOUANEMAILCONTAININGALINKTORESETYOURPASSWORD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@drawable/bg_white_dian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="64dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yum.two_yum.utile.ContainsEmojiEditText
            android:id="@+id/email_et"
            android:paddingLeft="16dp"
            android:textSize="17dp"
            android:textColorHint="@color/color_c7c7cc"
            android:paddingRight="16dp"
            android:maxLength="225"
            android:textColor="@color/color_484848"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textCursorDrawable="@drawable/my_cursor"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/clear_btn"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:hint="@string/EMAIL" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/clear_btn"
            android:layout_alignParentRight="true"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/edit_clear" />
    </RelativeLayout>

</LinearLayout>