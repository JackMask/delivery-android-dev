<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:id="@+id/popup"
        android:layout_width="127dp"
        android:layout_height="106dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/main_bottom">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_D7D7D7"/>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="57dp">


        <LinearLayout
            android:id="@+id/merchants_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="btnhome">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/show_merchants"
                android:visibility="visible"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/nearby_show" />
            <ImageView
                android:id="@+id/hide_merchants"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/nearby"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/nearby_tv"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_FFFF3B30"
                android:text="@string/NEARBY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/remind_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="btnhome">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/show_remind"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/collection_show" />

            <ImageView
                android:id="@+id/hide_remind"
                android:visibility="visible"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/collection" />
            </LinearLayout>
            <TextView
                android:id="@+id/favorites_tv"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_FF484848"
                android:text="@string/FAVORITES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="btnhome">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/show_message"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/orders_show" />

                <ImageView
                    android:id="@+id/hide_message"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/orders" />

            </LinearLayout>
            <TextView
                android:id="@+id/orders_tv"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_FF484848"
                android:text="@string/ORDERS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="btnhome">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/show_my"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/my_show" />

            <ImageView
                android:id="@+id/hide_my"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/my" />
            </LinearLayout>
            <TextView
                android:id="@+id/me_tv"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_FF484848"
                android:text="@string/ME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/no_data_layout"
        android:layout_weight="1"
        android:background="#6e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/select_layout"
        android:visibility="gone"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <TextView
            android:textColor="@color/color_484848"
            android:textSize="15dp"
            android:background="@color/color_f4f4f4"
            android:gravity="center"
            android:text="2y@2yum.app"
            android:layout_width="match_parent"
            android:layout_height="31dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/call_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/SENDEMAIL"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:text="@string/CANCEL"
                android:textStyle="bold"
                android:textColor="@color/color_007AFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>