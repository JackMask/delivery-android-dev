<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:cacheColorHint="#00000000"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/left_arrow"
            android:top="28dp" />

        <TextView

            android:id="@+id/save_btn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/SAVE"
            android:textSize="16dp" />
    </RelativeLayout>



    <com.yum.two_yum.utile.CircleImageView
        android:id="@+id/hospital_head_img"
        android:src="@mipmap/head_img"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="50dp"
        android:layout_width="81dp"
        android:layout_height="81dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:text="@string/NAME1"
                android:textColor="@color/color_484848"
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/sex_rg"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/hospital_button"
                    style="@style/package_radio_style"
                    android:text="@string/MS"
                    android:textSize="16dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_484848"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/merchants_button"
                    style="@style/package_radio_style"
                    android:text="@string/MR"
                    android:checked="true"
                    android:textSize="16dp"
                    android:textColor="@color/color_484848"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.yum.two_yum.utile.ContainsEmojiEditText
                android:maxLength="225"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/name_ed"
                android:textSize="24dp"
                android:textCursorDrawable="@drawable/my_cursor"
                android:gravity="center_vertical"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/edit_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_ebebeb"/>
        <TextView
            android:layout_marginTop="28dp"
            android:textSize="16dp"
            android:text="@string/BIRTHDATE"
            android:textColor="@color/color_484848"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/birthdate_btn"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/phone_ed"
                android:textSize="24dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_484848"
                android:layout_weight="1"
                android:textColorHint="@color/color_c7c7c7"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/edit_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_ebebeb"/>
        <TextView
            android:layout_marginTop="28dp"
            android:textSize="16dp"
            android:text="@string/EMAIL"
            android:textColor="@color/color_484848"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.yum.two_yum.utile.ContainsEmojiEditText
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/email_ed"
                android:textSize="18dp"
                android:maxLength="225"
                android:textCursorDrawable="@drawable/my_cursor"
                android:gravity="center_vertical"
                android:textColor="@color/color_c7c7c7"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_ebebeb"/>
    </LinearLayout>

</LinearLayout>