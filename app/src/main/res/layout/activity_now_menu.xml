<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:layout_marginTop="20dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_img"
            android:top="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/TODAYSMENU"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="28dp"
            android:layout_toLeftOf="@+id/more_btn"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/add_img"
            android:layout_centerVertical="true"
            android:gravity="right"
            />
        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/more_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <View
        android:layout_below="@+id/title_layout"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DBDBDB"/>
    <ScrollView
        android:paddingBottom="86dp"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/add_pic_btn"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_grad"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/pic_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/color_DBDBDB"
                    android:text="@string/Add_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/cert_iv"
                android:scaleType="fitXY"
                android:src="@mipmap/pic_square"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.yum.two_yum.utile.pulltorefresh.PullToRefreshListView
        android:scrollbars="none"
        android:id="@+id/content_lv"
        android:dividerHeight="0px"
        android:divider="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/cancel_btn"
            android:background="@drawable/area_bg_red_orders_btn"
            android:textColor="@color/color_ff3b30"
            android:textSize="18dp"
            android:visibility="gone"
            android:text="@string/PREVIEW"
            android:gravity="center"
            android:layout_width="102dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/ok_btn"
            android:background="@drawable/button_red"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:text="@string/SAVE"
            android:gravity="center"
            android:layout_width="102dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/no_data_layout"
        android:layout_weight="1"

        android:background="#6e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/select_layout"
        android:visibility="gone"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/call_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/SORTINGPROMPT"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/cancel_btn1"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:text="@string/CANCEL"
                android:textStyle="bold"
                android:textColor="@color/color_007AFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>