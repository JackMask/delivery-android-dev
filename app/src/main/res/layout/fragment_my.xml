<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/no_log_in_layout" />
    <com.yum.two_yum.utile.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/my_layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.yum.two_yum.utile.CircleImageView
                android:id="@+id/hospital_head_img"
                android:src="@mipmap/head_img"
                android:layout_marginTop="84dp"
                android:layout_marginBottom="23dp"
                android:layout_width="81dp"
                android:layout_height="81dp" />
            <LinearLayout
                android:id="@+id/share"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="88dp">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/color_484848"
                    android:text="@string/SHAREFRIENDS"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/share"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.75px"
                android:background="@color/color_ebebeb"/>
            <LinearLayout
                android:id="@+id/switching"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/switching_tv"
                    android:textSize="20dp"
                    android:textColor="@color/color_484848"
                    android:text="@string/LISTYOURMENU"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/right_arrow_my"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.75px"
                android:background="@color/color_ebebeb"/>
            <LinearLayout
                android:id="@+id/settings"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/color_484848"
                    android:text="@string/SETTINGS"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/settings"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.75px"
                android:background="@color/color_ebebeb"/>
            <LinearLayout
                android:id="@+id/feedback"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/color_484848"
                    android:text="@string/GIVEUSFEEDBACK"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/mail1"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.75px"
                android:background="@color/color_ebebeb"/>
            <LinearLayout
                android:id="@+id/release_menu"
                android:paddingTop="30dp"
                android:visibility="gone"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/color_484848"
                    android:text="@string/GIVEUSFEEDBACK"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/mail1"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:visibility="gone"
                android:background="@color/color_FFd7d7d7"/>

        </LinearLayout>
    </com.yum.two_yum.utile.pulltorefresh.PullToRefreshScrollView>


</LinearLayout>