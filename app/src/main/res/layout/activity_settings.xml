<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/left_arrow"
            android:top="28dp" />


    </RelativeLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:textSize="36dp"
        android:text="@string/SETTINGS"
        android:textStyle="bold"
        android:paddingLeft="24dp"
        android:textColor="@color/color_484848"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/service_btn"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:paddingTop="22dp"
            android:gravity="center_vertical"
            android:paddingBottom="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_484848"
                android:text="@string/TERMSOFUSE"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_DBDBDB"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="22dp"
            android:gravity="center_vertical"
            android:paddingBottom="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_484848"
                android:text="@string/VERSION"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/version_name"
                android:textSize="20dp"
                android:textColor="@color/color_484848"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_DBDBDB"/>
        <LinearLayout
            android:id="@+id/log_out_btn"
            android:orientation="horizontal"
            android:paddingTop="22dp"
            android:gravity="center_vertical"
            android:paddingBottom="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_484848"
                android:text="@string/LOGOUT"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.75px"
            android:background="@color/color_DBDBDB"/>
    </LinearLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/no_data_layout"
        android:layout_weight="1"
        android:background="#6e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/select_layout"
        android:visibility="gone"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/call_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:textColor="@color/color_007AFF"
                android:text="@string/LOGOUT"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/dialog_line"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:padding="18dp"
                android:textSize="20dp"
                android:text="@string/CANCEL"
                android:textStyle="bold"
                android:textColor="@color/color_007AFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>