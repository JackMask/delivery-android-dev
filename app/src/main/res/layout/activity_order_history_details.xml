<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="48dp"
            android:paddingRight="20dp"
            android:layout_height="28dp"
            android:src="@mipmap/back_img"
            android:top="28dp" />

        <TextView
            android:id="@+id/title_tv"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/color_484848"
            android:text="@string/CREATEACCOUNT"
            android:textSize="15dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/title_layout"
        android:orientation="vertical"
        android:background="@color/color_ebebeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yum.two_yum.utile.pulltorefresh.PullToRefreshListView
            android:id="@+id/content_lv"
            android:dividerHeight="0px"
            android:divider="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
        <View
            android:visibility="gone"
            android:id="@+id/no_data_layout2"
            android:layout_weight="1"
            android:background="#6e000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/phone_layout"
            android:visibility="gone"
            android:layout_weight="1.2"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_tv"
                android:textColor="@color/color_484848"
                android:textSize="15dp"
                android:background="@color/color_f4f4f4"
                android:gravity="center"
                android:text="2y@2yum.app"
                android:layout_width="match_parent"
                android:layout_height="31dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/call_phone_btn"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:textColor="@color/color_007AFF"
                    android:text="@string/CALLPHONE"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/dialog_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/sms_phone_btn"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:textColor="@color/color_007AFF"
                    android:text="@string/MESSAGE"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/dialog_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/cancel_btn1"
                    android:layout_weight="1"
                    android:padding="18dp"
                    android:textSize="20dp"
                    android:text="@string/CANCEL"
                    android:textStyle="bold"
                    android:textColor="@color/color_007AFF"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>