<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/item_layout"
            android:paddingRight="16dp"
            android:paddingTop="38dp"
            android:paddingBottom="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/sorting_layout"
                android:layout_width="42dp"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/sort_btn"
                android:src="@mipmap/timg_btn"
                android:layout_width="42dp"
                android:scaleType="center"
                android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:id="@+id/dishes_img"
                android:src="@mipmap/one"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:layout_width="156dp"
                android:layout_height="127dp" />
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/menu_name_tv"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_marginBottom="7dp"
                    android:text="火腿三明治咖啡牛肉"
                    android:textColor="@color/color_FF484848"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/content_tv"
                    android:lines="4"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:text="Weread can be toasted or not, bacon crispy or limp, lettuce iceberg or other…"
                    android:textColor="@color/color_FF484848"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pice_tv"
                            android:textSize="18dp"
                            android:text="$ 13.99"
                            android:textColor="@color/color_FF484848"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="2px"
        android:background="@color/color_FFd7d7d7"
        />
</LinearLayout>